                    sshagent(['SSH_VM']) {
                        sh '''
                            sudo scp -i $KEY_FILE -o StrictHostKeyChecking=no -rp myflaskproject tomer@$ANSIBLE_IP:/home/tomer/flask-docker
                            ssh-keyscan $ANSIBLE_IP >> /var/lib/jenkins/.ssh/known_hosts
