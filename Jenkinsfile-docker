                                   cd /home/tomer/flask-docker/myflaskproject/sample-flask
                                   python3 /home/tomer/myflaskproject/sample-flask/findlastversion.py
                                '
                        '''
                    }
                }
            }
        }
*/
        stage('testing') {
            steps {
               withCredentials([sshUserPrivateKey(credentialsId: 'SSH_ec2', keyFileVariable: 'KEY_FILE')]) {
                    withCredentials([
                        [
                            $class: 'AmazonWebServicesCredentialsBinding',
                            credentialsId: 'aws-jenkins',
                            accessKeyVariable: 'AWS_ACCESS_KEY_ID',
                            secretKeyVariable: 'AWS_SECRET_ACCESS_KEY'
                        ]
                    ]) {
                        sh '''
                            sudo scp -i $KEY_FILE -o StrictHostKeyChecking=no -rp myflaskproject/sample-flask/runlatest.py ec2-user@$TEST_IP:/home/ec2-user/
                            ssh -o StrictHostKeyChecking=no -i $KEY_FILE tomer@$TEST_IP '
                                   python3 runlatest.py
                                '
                        '''
                    }
                }
            }
        }
    }
}

